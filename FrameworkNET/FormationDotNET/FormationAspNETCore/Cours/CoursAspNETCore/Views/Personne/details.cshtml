@{
    ViewData["Title"] = $"Details Persnone N°{@Model.Id}";
}

@model Personne

<h1>Personne View Index</h1>
<div class="card AffichageContact">
    <h4 class="title">Afffichage de la personne via la méthode ToString()</h4>
    @Model
</div>

<div class="card details">
    <h4>Détails de la personne N°@Model.Id</h4>
    <div class="row m-1 justify-content-center align-items-center">
        <span class="col-6 p-1 form-control">Id : @Model.Id</span>
    </div>
    <div class="row m-1 justify-content-center align-items-center">
        <span class="col-6 p-1 form-control">Nom : @Model.Nom</span>
    </div>
    <div class="row m-1 justify-content-center align-items-center">
        <span class="col-6 p-1 form-control">Prénom : @Model.Prenom</span>
    </div>
    <div class="row m-1 justify-content-center align-items-center">
        <span class="col-6 p-1 form-control">Email : @Model.Email</span>
    </div>
</div>